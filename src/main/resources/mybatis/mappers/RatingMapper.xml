<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mappers.RatingMapper">

    <!-- 평점 추가 -->
    <!--<insert id="addRating">
        INSERT INTO ratings (movie_id, user_id, score)
        VALUES (#{movieId}, #{userId}, #{score})
    </insert>-->

    <!-- 특정 영화의 평점 목록 조회 -->
    <select id="getRatingsByMovie" resultType="com.bit.cinema_manager.entity.Rating">
        SELECT * FROM ratings WHERE movie_id = #{movieId}
    </select>

    <!-- 특정 영화의 평점 업데이트 -->
    <update id="updateMovieScore">
        UPDATE movies SET score = #{score} WHERE id = #{movieId}
    </update>

</mapper>
