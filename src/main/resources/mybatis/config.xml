<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <settings>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>

    <typeAliases>
        <typeAlias type="com.bit.cinema_manager.model.User" alias="user"/>
        <typeAlias type="com.bit.cinema_manager.model.Movie" alias="movie"/>
        <typeAlias type="com.bit.cinema_manager.model.Theater" alias="theater"/>
        <typeAlias type="com.bit.cinema_manager.model.Rating" alias="rating"/>
        <typeAlias type="com.bit.cinema_manager.model.Screening" alias="screening"/>
    </typeAliases>
</configuration>
